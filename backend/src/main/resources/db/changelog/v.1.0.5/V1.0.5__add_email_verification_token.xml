<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="developer">
        <createTable tableName="card">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="number" type="bigint"/>
            <column name="opening_date" type="date"/>
            <column name="date_of_expiration" type="date"/>
            <column name="cvc" type="integer"/>
            <column name="score" type="integer"/>
            <column name="is_blocked" type="boolean"/>
            <column name="colour" type="varchar(10)"/>
            <column name="pattern" type="varchar(10)"/>
            <column name="qr_code" type="varchar(1500)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="developer">
        <createTable tableName="app_user">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(40)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="varchar(400)">
                <constraints nullable="false"/>
            </column>
            <column name="date_of_birth" type="date"/>
            <column name="is_pending_deletion" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="privilege" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email_verification_token" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_email_verified" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="card_id" type="integer"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="developer">
        <sql>
            ALTER TABLE app_user
                ADD CONSTRAINT fk_app_user_card
                    FOREIGN KEY (card_id)
                        REFERENCES card(id)
                        ON DELETE CASCADE;
        </sql>
    </changeSet>

</databaseChangeLog>